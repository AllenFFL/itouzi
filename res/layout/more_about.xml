<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/i_white" >

    <RelativeLayout
        android:id="@+id/about_banners"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_red" >

        <ImageView
            android:id="@+id/about_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/more_us"
            android:textColor="@color/i_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/about_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_banners"
        android:layout_margin="10dp"
        android:text="@string/about_content"
        android:textSize="20sp"
        android:textColor="@color/i_black" >
    </TextView>

</RelativeLayout>