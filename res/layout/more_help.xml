<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/i_white" >

    <RelativeLayout
        android:id="@+id/help_banners"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_red" >

        <ImageView
            android:id="@+id/help_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/more_help"
            android:textColor="@color/i_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/help_sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_banners" >

        <LinearLayout
            android:id="@+id/help_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/help_rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/help_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:text="如何注册和认证?"
                    android:textColor="@color/i_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/help_hint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/help_tv1"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text=">"
                    android:textColor="@color/i_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/help_tv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/help_tv1"
                    android:layout_marginBottom="10dp"
                    android:text="@string/how_register"
                    android:textColor="@color/i_gray"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/help_line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/help_tv11"
                    android:background="@color/i_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/help_rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/help_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:text="如何投资理财项目?"
                    android:textColor="@color/i_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/help_hint2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/help_tv2"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text=">"
                    android:textColor="@color/i_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/help_tv22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/help_tv2"
                    android:layout_marginBottom="10dp"
                    android:text="@string/how_invest"
                    android:textColor="@color/i_gray"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/help_line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/help_tv22"
                    android:background="@color/i_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/help_rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/help_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:text="投资免费么?"
                    android:textColor="@color/i_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/help_hint3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/help_tv3"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text=">"
                    android:textColor="@color/i_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/help_tv33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/help_tv3"
                    android:layout_marginBottom="10dp"
                    android:text="@string/how_free"
                    android:textColor="@color/i_gray"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/help_line3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/help_tv33"
                    android:background="@color/i_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/help_rl5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/help_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:text="忘记手势密码怎么办?"
                    android:textColor="@color/i_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/help_hint5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/help_tv5"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text=">"
                    android:textColor="@color/i_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/help_tv55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/help_tv5"
                    android:layout_marginBottom="10dp"
                    android:text="@string/how_password"
                    android:textColor="@color/i_gray"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/help_line5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/help_tv55"
                    android:background="@color/i_divider" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>