<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/i_red_lock"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/reset_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:text="取消"
        android:textColor="@color/i_white"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/reset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:text="修改手势密码"
        android:textColor="@color/i_white"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/reset_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="请输入当前密码"
        android:textColor="@color/i_white"
        android:textSize="20sp" >
    </TextView>

    <com.allen.itouzi.view.LockPatternView
        android:id="@+id/reset_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_hint"/>
   <TextView
        android:id="@+id/reset_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_pattern"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="忘记密码？"
        android:textColor="@color/i_white"
        android:textSize="17sp"
       android:visibility="gone" >
    </TextView>
</RelativeLayout>