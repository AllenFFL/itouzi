<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_login_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/more_logins"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/red_corner_rectangle" >

        <TextView
            android:id="@+id/more_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="爱投资用户"
            android:textColor="@color/i_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/more_login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_login_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="allenzeng"
            android:textColor="@color/i_white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/more_login_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@id/more_login_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_corner_rectangle"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/i_black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/more_login_negative"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_below="@id/more_login_text"
            android:background="@drawable/white_corner_rectangle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/dark_red"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/more_login_positive"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_below="@id/more_login_text"
            android:background="@drawable/white_corner_rectangle"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/dark_red"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>